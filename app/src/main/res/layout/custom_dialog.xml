<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/custom_model_title"
            />
        <TextView
            android:id="@+id/dialogDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:text="@string/custom_model_description"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/dialogBtnYes"
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:textAllCaps="false"
                android:text="@string/custom_model_yes"
                />
            <Button
                android:id="@+id/dialogBtnNo"
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:backgroundTint="@color/black"
                android:textAllCaps="false"
                android:text="@string/custom_model_no"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>